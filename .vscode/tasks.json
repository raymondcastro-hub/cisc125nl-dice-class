{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Compile/link C++ files",
            "command": "g++ -c -g *.cpp; g++ -g *.o; rm *.o",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": {
                "pattern": { "regexp": "error" }
            },
            "group": {
                "isDefault": true,
                "kind": "build"
            }
        }
    ]
}